                           <page string="Specification" name="Specification">
                            <field
                                name="projects_ids"
                                widget="section_and_note_one2many"
                                mode="tree"
                            >

                            </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
