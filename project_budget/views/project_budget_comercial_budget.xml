                            <group name="detail3">
                                <field name="date_actual" readonly="1"/>
                            </group>
                            <group>
                                <field name="year" attrs="{'readonly': [('budget_state', '=', 'fixed')]}"/>
                            </group>
                        </group>
                        <group>
                            <field name="name" attrs="{'readonly': [('budget_state', '=', 'fixed')]}"/>
                            <field name="descr" colspan="2" attrs="{'readonly': [('budget_state', '=', 'fixed')]}"/>
                        </group>

