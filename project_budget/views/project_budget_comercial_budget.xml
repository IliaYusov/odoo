                    <field name="customer_organization_id" force_save="1" options="{'no_open': True,}" optional="show" attrs="{'readonly': [('budget_state', '=', 'fixed')]}"/>
                    <field name="essence_project" optional="show" attrs="{'readonly': [('budget_state', '=', 'fixed')]}"/>
                    <field name="end_presale_project_quarter"  optional="show"/>
                    <field name="end_sale_project_quarter"  optional="show"/>
                    <field name="total_amount_of_revenue" optional="show"/>
                    <field name="cost_price" optional="show"/>
                    <field name="margin_income" optional="show"/>
                    <field name="profitability" optional="show"/>
                    <field name="estimated_probability" optional="show" attrs="{'readonly': [('budget_state', '=', 'fixed')]}"/>
                    <field name="vat_attribute_id" optional="hide" attrs="{'readonly': [('budget_state', '=', 'fixed')]}"/>
                    <field name="legal_entity_signing_id" force_save="1" options="{'no_open': True,}" optional="hide" attrs="{'readonly': [('budget_state', '=', 'fixed')]}"/>
                    <field name="project_type_id" force_save="1" options="{'no_open': True,}" optional="hide" attrs="{'readonly': [('budget_state', '=', 'fixed')]}"/>
                    <field name="comments" optional="hide" attrs="{'readonly': [('budget_state', '=', 'fixed')]}"/>
                    <field name="technological_direction_id" force_save="1" options="{'no_open': True,}" optional="hide" attrs="{'readonly': [('budget_state', '=', 'fixed')]}"/>
                 </tree>
            </field>
        </record>

