<odoo>
    <data>
        <record id="show_comercial_budget_spec_form" model="ir.ui.view">
            <field name="name">project_budget.commercial_budget_spec.form</field>
            <field name="model">project_budget.commercial_budget_spec</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <!--The oe_highlight class gives the button a red color when it is saved.
                        It is usually used to indicate the expected behaviour. -->
                        <button string="approve (manager)" type="object" name="set_approve_manager" class="oe_highlight" attrs="{'invisible': ['|',('approve_state', '!=', 'need_approve_manager'),('budget_state', '=', 'fixed')]}"/>
                        <button string="approve (supervisor)" type="object" name="set_approve_supervisor" class="oe_highlight" attrs="{'invisible': ['|',('approve_state', '!=', 'need_approve_supervisor'),('budget_state', '=', 'fixed')]}"/>
                        <button string="cancel approve (supervisor)" type="object" name="cancel_approve" class="oe_highlight" attrs="{'invisible': ['|',('approve_state', 'not in', ('approved','need_approve_supervisor')),('budget_state', '=', 'fixed')]}"/>
                    </header>

                    <sheet string="Project">
                        <field name="budget_state" invisible="1"/>
                        <field name="approve_state" readonly="1"
                                decoration-danger="approve_state=='need_approve_manager'"
                                decoration-warning="approve_state=='need_approve_supervisor'"
                                decoration-success="approve_state=='approved'"
                                decoration-muted="specification_state=='cancel'"
                        />
                        <group>
                            <group>
                                <field name="project_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="commercial_budget_id" options="{'no_open': True}" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                            </group>
                        </group>
                        <group>
                        <group>
                            <field name="specification_state" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                        </group>
                            <group>
                                <field name="currency_id" options="{'no_open': True}" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                            </group>
                        </group>
                        <group string = "Position attributes">
                            <group>
                                <field name="project_office_id" force_save="1" options="{'no_open': True,}" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                <field name="project_supervisor_id" force_save="1" options="{'no_open': True,}" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                <field name="project_manager_id" force_save="1" options="{'no_open': True,}" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                <field name="legal_entity_signing_id" force_save="1" options="{'no_open': True,}" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                <field name="project_type_id" force_save="1" options="{'no_open': True,}" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                <field name="technological_direction_id" force_save="1" options="{'no_open': True,}" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                            </group>
                            <group>
                                <field name="customer_organization_id" force_save="1" options="{'no_open': True,}" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                <field name="customer_status_id" force_save="1" options="{'no_open': True,}" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                <field name="industry_id" force_save="1" options="{'no_open': True,}" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                <field name="vat_attribute_id" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                <field name="essence_project" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                <field name="comments" colspan="2" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                            </group>
                        </group>
                        <group string="Position dates">
                            <group>
                                <field name="end_presale_project_quarter"/>
                                <field name="end_presale_project_month" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                            </group>
                        <group>
                            <field name="end_sale_project_quarter"/>
                            <field name="end_sale_project_month" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                        </group>
                        </group>
                            <group string="Position calculate">
                                <group>
                                    <field name="profitability"/>
                                </group>
                                <group>
                                    <field name="estimated_probability" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                </group>
                            </group>
                        <group>
                        <group>
                            <group>
                                <field name="margin_income"
                                    decoration-bf="1"
                                    decoration-success="margin_income &gt; 0"
                                    decoration-danger="margin_income &lt; 0"
                                    />
                            </group>
                            <group>
                                <field name="total_amount_of_revenue"
                                    decoration-bf="1"
                                    decoration-success="total_amount_of_revenue &gt; 0"
                                    />
                                <field name="revenue_from_the_sale_of_works" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                <field name="revenue_from_the_sale_of_goods" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="cost_price"
                                    decoration-bf="1"
                                    decoration-success="cost_price &gt; 0"
                                    />
                                <field name="cost_of_goods" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                <field name="own_works_fot" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                <field name="third_party_works" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                <field name="awards_on_results_project" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                <field name="transportation_expenses" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                            </group>
                            <group>
                                <field name="travel_expenses" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                <field name="representation_expenses" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                <field name="taxes_fot_premiums" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                <field name="warranty_service_costs" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                <field name="rko_other" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                <field name="other_expenses" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                            </group>
                        </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

