<odoo>
    <data>
        <record id="show_comercial_budget_spec_kanban" model="ir.ui.view">
            <field name="name">project_budget.projects.kanban</field>
            <field name="model">project_budget.projects</field>
            <field name="arch" type="xml">
                <kanban class="oe_background_grey o_kanban_dashboard o_emphasize_colors o_stock_kanban" create="0" group_create="false">
                    <field name="project_manager_id"/>
                    <field name="essence_project" readonly="1"/>
                    <field name="cost_price"/>
                    <field name="budget_state"/>
                    <field name="specification_state"/>
                    <field name="customer_organization_id"/>
                    <field name="legal_entity_signing_id"/>
                    <field name="end_sale_project_quarter"/>
                    <field name="end_presale_project_quarter"/>
                   <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div t-attf-class="o_kanban_card_header">
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_primary">
                                           <field name="approve_state" readonly="1"  widget="badge"
                                                decoration-danger="approve_state=='need_approve_manager'"
                                                decoration-warning="approve_state=='need_approve_supervisor'"
                                                decoration-success="approve_state=='approved'"
                                                decoration-muted="specification_state=='cancel'"
                                           />
                                        </div>
                                        <div class="col-12">
                                           Contract: <field name="end_sale_project_quarter"/>
                                           Last shipment: <field name="end_presale_project_quarter"/>
                                        </div>
                                    </div>
                                        <div class="o_kanban_image me-1">
                                            <img t-att-src="kanban_image('project_budget.project_manager', 'avatar_128', record.project_manager_id.raw_value)" alt="manager" class="o_image_64_contain"/>
                                        </div>
                                        <div >
                                            <a>Revenue: <field name="total_amount_of_revenue"/></a>
                                        </div>
                                        <div>
                                            <field name="customer_organization_id"/>
                                        </div>
                                        <div>
                                            <a>Legal sign: <field name="legal_entity_signing_id"/></a>
                                        </div>
                                        <div>
                                            <field name="essence_project"/>
                                        </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <record id="show_comercial_budget_spec_form" model="ir.ui.view">
            <field name="name">project_budget.projects.form</field>
            <field name="model">project_budget.projects</field>
            <field name="arch" type="xml">
                <form create="0" delete="0">
                    <header>
                        <!--The oe_highlight class gives the button a red color when it is saved.
                        It is usually used to indicate the expected behaviour. -->
                        <button string="Save" type="object" class="btn-primary" special="save"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel" data-hotkey="z"/>
                        <button string="Send to approve" type="object" name="set_approve_manager" class="oe_highlight" attrs="{'invisible': ['|',('approve_state', '!=', 'need_approve_manager'),('budget_state', '=', 'fixed')]}"/>
                        <button string="approve" type="object" name="set_approve_supervisor" class="oe_highlight" attrs="{'invisible': ['|',('approve_state', '!=', 'need_approve_supervisor'),('budget_state', '=', 'fixed')]}"/>
                        <button string="cancel approve" type="object" name="cancel_approve" class="oe_highlight" attrs="{'invisible': ['|',('approve_state', 'not in', ('approved','need_approve_supervisor')),('budget_state', '=', 'fixed')]}"/>
                        <field name="approve_state" widget="statusbar" statusbar_visible="need_approve_manager,need_approve_supervisor,approved"/>
                    </header>
                    <sheet string="Project">
                        <field name="budget_state" invisible="1"/>
                        <group col="5">
                            <group>
                                <field name="project_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="specification_state" readonly="1"/>
                            </group>
                            <group>
                                <field name="approve_state" readonly="1"  widget="badge"
                                        decoration-danger="approve_state=='need_approve_manager'"
                                        decoration-warning="approve_state=='need_approve_supervisor'"
                                        decoration-success="approve_state=='approved'"
                                        decoration-muted="specification_state=='cancel'"
                                />
                            </group>
                            <group>
                                <field name="estimated_probability_id" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"
                                        decoration-bf="1" options="{'no_open': True,}"/>
                            </group>
                            <group>
                                <field name="project_have_steps" widget="boolean_toggle"
                                        attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"
                                    />
                            </group>
                        </group>
                        <group col="3">
                            <group>
                                <field name="essence_project" placeholder="type here essence of the project" colspan="1"
                                               attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                            </group>
                            <group>
                                <field name="currency_id" options="{'no_open': True}" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                <field name="vat_attribute_id" placeholder="select vat attribute"
                                       attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')], 'invisible': [('project_have_steps', '=', True)]}"/>
                            </group>
                            <group>
                                <field name="end_presale_project_month"  attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}" />
                                <field name="end_sale_project_month" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="General">
                                <group col="1">
                                    <field name="commercial_budget_id" required="1"
                                          options="{'no_open': True}" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"
                                          invisible="1"
                                    />
                                </group>
                                <h5>
                                    <group col="3">
                                        <group>
                                             <field name="total_amount_of_revenue"
                                                decoration-bf="1"
                                                decoration-success="total_amount_of_revenue &gt; 0"
                                            />
                                        </group>
                                        <group>
                                            <field name="cost_price"
                                                decoration-bf="1"
                                                decoration-success="cost_price &gt; 0"
                                                />
                                        </group>
                                        <group>
                                            <field name="margin_income"
                                                decoration-bf="1"
                                                decoration-success="margin_income &gt; 0"
                                                decoration-danger="margin_income &lt; 0"
                                            />
                                        </group>
                                    </group>
                                    <group col="3">
                                        <group>
                                            <field class="text-break" name="project_office_id" placeholder="select project office" force_save="1" options="{'no_open': True,}"
                                                    attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"
                                                    decoration-bf="1"/>
                                        </group>
                                        <group>
                                            <field name="project_manager_id" widget="many2one_avatar" force_save="1" placeholder="select project manager" options="{'no_open': True,}"
                                                    attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"
                                                    decoration-bf="1"/>
                                            <field name="project_type_id" force_save="1" options="{'no_open': True,}" placeholder="select project type"
                                                   attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                        </group>
                                        <group>
                                            <field name="project_supervisor_id" widget="many2one_avatar" placeholder="select project supervisor" force_save="1" options="{'no_open': True,}"
                                                    attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"
                                                    decoration-bf="1"/>
                                            <field name="technological_direction_id" force_save="1" options="{'no_open': True,}" placeholder="select technological direction"
                                                   attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                        </group>
                                    </group>
                                </h5>
                                <h4>
                                    <group string="Customer/Organization" >
                                    </group>
                                </h4>
                                <group col="3">
                                    <group>
                                        <field name="customer_organization_id" force_save="1" options="{'no_open': True,}" placeholder="select costomer/organization"
                                               attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                        <field name="customer_status_id" force_save="1" options="{'no_open': True,}" placeholder="select customer state"
                                               attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                    </group>
                                    <group>
                                        <field name="industry_id" force_save="1" options="{'no_open': True,}" placeholder="select industry"
                                               attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                    </group>
                                    <group>
                                        <field name="legal_entity_signing_id" force_save="1" options="{'no_open': True,}" placeholder="select legal entity signing"
                                               attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                    </group>
                                </group>
                                <h4>
                                    <group string="Dates">
                                    </group>
                                </h4>
                                <group>
                                    <group col="2">
                                        <field name="end_sale_project_quarter"/>
                                        <field name="end_presale_project_quarter"/>
                                    </group>
                                    <group col="2">
                                        <field name="comments" placeholder="type comments for the project" colspan="1" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Financial indicators">
                                <h4>
                                    <group col="2">
                                        <group string="Revenue" >
                                        </group>
                                    </group>
                                </h4>
                                <group col="3">
                                    <h5>
                                        <group>
                                             <field name="total_amount_of_revenue"
                                                decoration-bf="1"
                                                decoration-success="total_amount_of_revenue &gt; 0"
                                            />
                                        </group>
                                    </h5>
                                    <group>
                                        <field name="revenue_from_the_sale_of_works" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                    </group>
                                    <group>
                                        <field name="revenue_from_the_sale_of_goods" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                    </group>
                                </group>
                                 <h4>
                                    <group string="Costs" >
                                    </group>
                                </h4>
                                <group col="3">
                                    <h5>
                                        <group>
                                            <field name="cost_price"
                                                decoration-bf="1"
                                                decoration-success="cost_price &gt; 0"
                                                />
                                        </group>
                                    </h5>
                                    <group>
                                        <field name="cost_of_goods" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                    </group>
                                    <group>
                                        <field name="own_works_fot" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                    </group>
                                </group>
                                <group col="3">
                                    <group>
                                    </group>
                                    <group>
                                        <field name="third_party_works" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                        <field name="transportation_expenses" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                        <field name="warranty_service_costs" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                        <field name="travel_expenses" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                    </group>
                                    <group>
                                        <field name="representation_expenses" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                        <field name="taxes_fot_premiums" />
                                        <field name="awards_on_results_project" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                        <field name="rko_other" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                        <field name="other_expenses" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}"/>
                                    </group>
                                </group>
                                <h4>
                                    <group string="Margin/profitability" >
                                    </group>
                                </h4>
                                <h5>
                                    <group>
                                            <group>
                                                <field name="margin_income"
                                                    decoration-bf="1"
                                                    decoration-success="margin_income &gt; 0"
                                                    decoration-danger="margin_income &lt; 0"
                                                />
                                            </group>
                                            <group>
                                                <field name="profitability"
                                                    decoration-success="margin_income &gt; 0"
                                                    decoration-danger="margin_income &lt; 0"
                                                />
                                            </group>
                                    </group>
                                </h5>
                            </page>
                            <page string="project steps" attrs="{'invisible': [('project_have_steps', '=', False)]}">
                                <group col="4">
                                    <group/>
                                    <group>
                                             <field name="total_amount_of_revenue" decoration-bf="1"
                                                decoration-success="total_amount_of_revenue &gt; 0"
                                            />
                                    </group>
                                    <group>
                                        <field name="prj_step_sum_without_vat" decoration-bf="1"
                                                decoration-danger="total_amount_of_revenue != prj_step_sum_without_vat"
                                                decoration-success="total_amount_of_revenue == prj_step_sum_without_vat"
                                        />
                                    </group>
                                    <group>
                                        <field name="prj_step_sum_with_vat" decoration-bf="1"
                                                decoration-danger="total_amount_of_revenue != prj_step_sum_without_vat"
                                                decoration-success="total_amount_of_revenue == prj_step_sum_without_vat"
                                        />
                                    </group>
                                </group>
                                <field name="project_steps_ids" widget="section_and_note_one2many"
                                        mode="tree" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}">
                                    <tree editable="bottom" default_order="date_step">
                                        <field name="project_steps_type_id" force_save="1" options="{'no_open': True,}"/>
                                        <field name="code" placeholder="type step code e.g. step-001"/>
                                        <field name="name" placeholder="type step name e.g. products recieve"/>
                                        <field name="date_step" />
                                        <field name="vat_attribute_id" force_save="1" options="{'no_open': True,}"/>
                                        <field name="sum_without_vat" />
                                        <field name="sum_with_vat" />
                                        <field name="margin_income" />
                                        <field name="profitability" />
                                    </tree>
                                </field>
                            </page>
                            <page string="Forecast">
                                <h5>
                                    <group>
                                        <group>
                                             <field name="total_amount_of_revenue"
                                                decoration-bf="1"
                                                decoration-success="total_amount_of_revenue &gt; 0"
                                            />
                                        </group>
                                        <group>
                                             <field name="total_amount_of_revenue_with_vat"
                                                decoration-bf="1"
                                                decoration-success="total_amount_of_revenue_with_vat &gt; 0"
                                            />
                                        </group>
                                    </group>
                                </h5>
                                <h4>
                                <group>
                                    <group string="planned_cash_flow">
                                    </group>
                                    <group>
                                        <field name="planned_cash_flow_sum"
                                        decoration-bf="1"
                                        decoration-success="total_amount_of_revenue_with_vat == planned_cash_flow_sum"
                                        decoration-danger="total_amount_of_revenue_with_vat != planned_cash_flow_sum"
                                        />
                                    </group>
                                </group>
                                </h4>
                                <field name="planned_cash_flow_ids"
                                widget="section_and_note_one2many"
                                mode="tree" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}">
                                    <tree editable="bottom" default_order="date_cash">
                                        <field name="project_have_steps" invisible="True"/>
                                        <field name="date_cash" placeholder="enter planned cash flow date"/>
                                        <field name="project_steps_id" options="{'no_open': True,}" placeholder="select project steps"
                                               attrs="{'column_invisible': [('parent.project_have_steps', '=', False)], 'required': [('parent.project_have_steps', '=', True)]}"
                                               domain="[('id', 'in', parent.project_steps_ids)]"
                                        />
                                        <field name="doc_cash" placeholder="type docs description"/>
                                        <field name="sum_cash" placeholder="enter planned cash flow sum "/>
                                    </tree>
                                </field>
                                <h4>
                                <group>
                                    <group  string="planned_acceptance_flow">
                                    </group>
                                    <group>
                                        <field name="planned_acceptance_flow_sum"
                                        decoration-bf="1"
                                        decoration-success="total_amount_of_revenue == planned_acceptance_flow_sum"
                                        decoration-danger="total_amount_of_revenue != planned_acceptance_flow_sum"
                                        />
                                    </group>
                                </group>
                                </h4>
                                <field name="planned_acceptance_flow_ids"
                                widget="section_and_note_one2many"
                                mode="tree" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}">
                                    <tree editable="bottom" default_order="date_cash">
                                        <field name="project_have_steps" invisible="True"/>
                                        <field name="date_cash" placeholder="enter planned cash flow date"/>
                                        <field name="project_steps_id" options="{'no_open': True,}" placeholder="select project steps"
                                                attrs="{'column_invisible': [('parent.project_have_steps', '=', False)], 'required': [('parent.project_have_steps', '=', True)]}"
                                                domain="[('id', 'in', parent.project_steps_ids)]"
                                        />
                                        <field name="doc_cash" placeholder="type docs description"/>
                                        <field name="sum_cash" placeholder="enter planned cash flow sum "/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Fact">
                                <h5>
                                    <group>
                                        <group>
                                             <field name="total_amount_of_revenue"
                                                decoration-bf="1"
                                                decoration-success="total_amount_of_revenue &gt; 0"
                                            />
                                        </group>
                                        <group>
                                             <field name="total_amount_of_revenue_with_vat"
                                                decoration-bf="1"
                                                decoration-success="total_amount_of_revenue_with_vat &gt; 0"
                                            />
                                        </group>
                                    </group>
                                </h5>
                                <h4>
                                <group>
                                    <group string="fact_cash_flow">
                                    </group>
                                    <group>
                                        <field name="fact_cash_flow_sum"
                                        decoration-bf="1"
                                        decoration-success="total_amount_of_revenue_with_vat == fact_cash_flow_sum"
                                        decoration-danger="total_amount_of_revenue_with_vat != fact_cash_flow_sum"
                                        />
                                    </group>
                                </group>
                                </h4>
                                <field name="fact_cash_flow_ids"
                                widget="section_and_note_one2many"
                                mode="tree" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}">
                                    <tree editable="bottom" default_order="date_cash">
                                        <field name="project_have_steps" invisible="1"/>
                                        <field name="date_cash" placeholder="enter fact cash flow date"/>
                                        <field name="project_steps_id" options="{'no_open': True,}" placeholder="select project steps"
                                               attrs="{'column_invisible': [('parent.project_have_steps', '=', False)], 'required': [('parent.project_have_steps', '=', True)]}"
                                               domain="[('id', 'in', parent.project_steps_ids)]"
                                        />
                                        <field name="doc_cash" placeholder="type docs description"/>
                                        <field name="sum_cash" placeholder="enter fact cash flow sum "/>
                                    </tree>
                                </field>
                                <h4>
                                <group>
                                    <group col="1" string="fact_acceptance_flow">
                                    </group>
                                    <group>
                                        <field name="fact_acceptance_flow_sum"
                                        decoration-bf="1"
                                        decoration-success="total_amount_of_revenue == fact_acceptance_flow_sum"
                                        decoration-danger="total_amount_of_revenue != fact_acceptance_flow_sum"
                                        />
                                    </group>
                                </group>
                                </h4>
                                <field name="fact_acceptance_flow_ids"
                                widget="section_and_note_one2many"
                                mode="tree" attrs="{'readonly': ['|',('budget_state', '=', 'fixed'),('approve_state','!=','need_approve_manager')]}">
                                    <tree editable="bottom" default_order="date_cash">
                                        <field name="project_have_steps" invisible="1"/>
                                        <field name="date_cash" placeholder="enter fact cash flow date"/>
                                        <field name="project_steps_id" options="{'no_open': True,}" placeholder="select project steps"
                                               attrs="{'column_invisible': [('parent.project_have_steps', '=', False)], 'required': [('parent.project_have_steps', '=', True)]}"
                                               domain="[('id', 'in', parent.project_steps_ids)]"
                                        />
                                        <field name="doc_cash" placeholder="type docs description"/>
                                        <field name="sum_cash" placeholder="enter fact cash flow sum "/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
<!--                        <div class="o_attachment_preview"/>-->
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="activity_ids" widget="mail_activity"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                </form>
            </field>
        </record>

        <record id="show_comercial_budget_spec_tree" model="ir.ui.view">
            <field name="name">project_budget.projects.tree</field>
            <field name="model">project_budget.projects</field>
            <field name="arch" type="xml">
<!--                      decoration-muted="specification_state=='cancel'"-->
<!--                      decoration-danger="approve_state=='need_approve_manager'"-->
<!--                      decoration-warning="approve_state=='need_approve_supervisor'"-->
<!--                      decoration-success="approve_state=='approved'"-->
<!--                     colors="red:approve_state=='need_approve_manager';-->
<!--                            yellow:approve_state=='need_approve_supervisor';-->
<!--                            green:approve_state=='approved';-->
<!--                            gray:specification_state=='cancel'"-->


                <tree delete="0" default_order="project_id desc"
                      decoration-muted="specification_state=='cancel'"
                      decoration-danger="approve_state=='need_approve_manager' and specification_state!='cancel'"
                      decoration-warning="approve_state=='need_approve_supervisor' and specification_state!='cancel'"
                      decoration-success="approve_state=='approved' and specification_state!='cancel'"
                >
<!--colors="blue:state == 'draft';gray:state in ('cancel','done');black:state == 'open'"-->

                    <header>
                        <!--The oe_highlight class gives the button a red color when it is saved.
                        It is usually used to indicate the expected behaviour. -->
                        <button string="Print current budget" type="object" name="set_approve_manager" class="oe_highlight" />
                        <button string="approve (manager)" type="object" name="set_approve_manager" class="oe_highlight" />
                        <button string="approve (supervisor)" type="object" name="set_approve_supervisor" class="oe_highlight"/>
                        <button string="cancel approve (supervisor)" type="object" name="cancel_approve" class="oe_highlight"/>
                    </header>
                    <control>
                        <create name="add_specification_line" string="Add a line"/>
                    </control>
