<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="document_flow_process_template_view_form_inherit_contract_approval" model="ir.ui.view">
        <field name="name">document_flow.process.template.view.form.inherit.contract_approval</field>
        <field name="model">document_flow.process.template</field>
        <field name="inherit_id" ref="document_flow.process_template_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group[@name='object_approval']" position="replace">
                <group name="object_approval" col="4">
                    <group>
                        <field name="model_id"/>
                    </group>
                    <group>
                        <field name="contract_type_id"
                               attrs="{'invisible': [('model', '!=', 'contract.contract')]}"/>
                    </group>
                    <group>
                        <field name="contract_kind_id"
                               attrs="{'invisible': [('model', '!=', 'contract.contract')]}"/>
                    </group>
                    <group>
                        <field name="document_kind_id" attrs="{'invisible': [('model', '=', 'contract.contract')]}"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
