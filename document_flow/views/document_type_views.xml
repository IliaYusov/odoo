<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_document_flow_document_type_view_all_types" model="ir.actions.act_window">
        <field name="name">Document Types</field>
        <field name="res_model">document_flow.document.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No document types found. Let's create one!
            </p>
        </field>
    </record>

    <record id="document_flow_document_type_view_tree" model="ir.ui.view">
        <field name="name">document_flow.document.type.tree</field>
        <field name="model">document_flow.document.type</field>
        <field name="arch" type="xml">
            <tree string="Document Types" multi_edit="1" sample="1">
                <field name="name"/>
                <field name="sequence_id"/>
            </tree>
        </field>
    </record>

    <record id="document_flow_document_type_view_form" model="ir.ui.view">
        <field name="name">document_flow.document.type.form</field>
        <field name="model">document_flow.document.type</field>
        <field name="arch" type="xml">
            <form string="Document Type">
                <sheet string="Document Type">
                    <div class="oe_title">
                        <h1 class="d-flex flex-row">
                            <field name="name" class="o_text_overflow" placeholder="Document Type Title..."/>
                        </h1>
                    </div>
                    <group>
                        <field name="sequence_id"/>
                    </group>
                    <notebook>
                        <page name="access_settings_page" string="Accessibility Settings">
                            <field name="access_setting_ids" mode="tree"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="document_flow_document_type_accessibility_setting_view_tree" model="ir.ui.view">
        <field name="name">document_flow.document.type.accessibility.setting.tree</field>
        <field name="model">document_flow.document.type.accessibility.setting</field>
        <field name="arch" type="xml">
            <tree string="Document Types" editable="bottom">
                <field name="document_type_id" invisible="1"/>
                <field name="user_ref"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>
</odoo>
