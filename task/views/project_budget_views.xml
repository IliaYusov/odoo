<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <menuitem name="My Tasks" id="menu_task_management" parent="project_budget.project_budget_menu" action="action_view_all_task"/>

    <record id="project_budget_task_view_inherit_form" model="ir.ui.view">
        <field name="name">project.budget.task.inherit</field>
        <field name="model">project_budget.projects</field>
        <field name="inherit_id" ref="project_budget.show_comercial_budget_spec_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//group" position="before">
                <div name="button_box">
                    <button class="oe_stat_button" type="action" name="%(action_view_task_id)d"
                            context="{'search_default_parent_ref_type': 'project_budget.projects', 'default_parent_ref_id': project_id }"
                            icon="fa-tasks">
                        <field string="Tasks" name="task_count" widget="statinfo"/>
                    </button>
                </div>
            </xpath>
        </field>
    </record>
</odoo>